<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Regis.Home">
    <Grid x:Name="grid">
      <Grid.RowDefinitions>
        <RowDefinition Height="*"/>
        <RowDefinition Height="*"/>
        <RowDefinition Height="*"/>
        <RowDefinition Height="*"/>
      </Grid.RowDefinitions>
      
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="*"/>
      </Grid.ColumnDefinitions>
      
      <StackLayout VerticalOptions="Center" HorizontalOptions="Center" Grid.Column="0" Grid.Row="0">
            <Button Image="news.png" x:Name="btnnews" BackgroundColor="White"></Button>
            <Label Text="Tin Mới" XAlign="Center" FontAttributes="Bold" TextColor="#019A01"></Label>
      </StackLayout>
      <StackLayout VerticalOptions="Center" HorizontalOptions="Center" Grid.Column="1" Grid.Row="0">
            <Button Image ="training.png" BackgroundColor="White" x:Name="btnCTDT"></Button>
            <Label Text="Đào Tạo" XAlign="Center" FontAttributes="Bold" TextColor="#019A01"></Label>
      </StackLayout>
      <StackLayout VerticalOptions="Center" HorizontalOptions="Center" Grid.Column="2" Grid.Row="0">
            <Button Image ="regis.png" BackgroundColor="White"></Button>
            <Label Text="Đăng Ký" XAlign="Center" FontAttributes="Bold" TextColor="#019A01"></Label>
      </StackLayout>

      <StackLayout VerticalOptions="Center" HorizontalOptions="Center" Grid.Column="0" Grid.Row="1">
            <Button Image="thi.png" x:Name="btnTKB" BackgroundColor="White"></Button>
            <Label Text="Lịch Học" XAlign="Center" FontAttributes="Bold" TextColor="#019A01"></Label>
      </StackLayout>
      <StackLayout VerticalOptions="Center" HorizontalOptions="Center" Grid.Column="1" Grid.Row="1">
            <Button Image ="tkb.png" BackgroundColor="White" x:Name="btnLichThi"></Button>
            <Label Text="Lịch Thi" XAlign="Center" FontAttributes="Bold" TextColor="#019A01"></Label>
      </StackLayout>
      <StackLayout VerticalOptions="Center" HorizontalOptions="Center" Grid.Column="2" Grid.Row="1">
            <Button Image ="result.png" BackgroundColor="White"></Button>
            <Label Text="Xem Điểm" XAlign="Center" FontAttributes="Bold" TextColor="#019A01"></Label>
      </StackLayout>

      <StackLayout VerticalOptions="Center" HorizontalOptions="Center" Grid.Column="0" Grid.Row="2">
            <Button Image ="money.png" BackgroundColor="White"></Button>
            <Label Text="Học Phí" XAlign="Center" FontAttributes="Bold" TextColor="#019A01"></Label>
      </StackLayout>
      <StackLayout VerticalOptions="Center" HorizontalOptions="Center" Grid.Column="1" Grid.Row="2">
            <Button Image ="danhgia.png" BackgroundColor="White"></Button>
            <Label Text="Đánh Giá" XAlign="Center" FontAttributes="Bold" TextColor="#019A01"></Label>
      </StackLayout>
      <StackLayout VerticalOptions="Center" HorizontalOptions="Center" Grid.Column="2" Grid.Row="2">
            <Button Image ="ykien.png" BackgroundColor="White"></Button>
            <Label Text="Ý Kiến" XAlign="Center" FontAttributes="Bold" TextColor="#019A01"></Label>
      </StackLayout>

      <StackLayout VerticalOptions="Center" HorizontalOptions="Center" Grid.Column="0" Grid.Row="3">
            <Button Image ="user.png" BackgroundColor="White"></Button>
            <Label Text="Tài Khoản" XAlign="Center" FontAttributes="Bold" TextColor="#019A01"></Label>
      </StackLayout>
      <StackLayout VerticalOptions="Center" HorizontalOptions="Center" Grid.Column="1" Grid.Row="3">
            <Button Image ="help.png" BackgroundColor="White"></Button>
            <Label Text="Trợ Giúp" XAlign="Center" FontAttributes="Bold" TextColor="#019A01"></Label>
      </StackLayout>
      <StackLayout VerticalOptions="Center" HorizontalOptions="Center" Grid.Column="2" Grid.Row="3">
            <Button Image ="about.png" BackgroundColor="White"></Button>
            <Label Text="Thông Tin" XAlign="Center" FontAttributes="Bold" TextColor="#019A01"></Label>
      </StackLayout>
    </Grid>
</ContentPage>